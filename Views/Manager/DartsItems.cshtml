@using Microsoft.AspNetCore.Mvc.Localization
@using SocialEmpires.Infrastructure.MultiLanguage
@using SocialEmpires.Models.Configs
@using SocialEmpires.Services
@using SocialEmpires.Utils
@using System.Text.Json
@inject IViewLocalizer localizer
@{
    Layout = "_ManagerLayout";
    ViewData["Title"] = localizer["DartsItems"];
    var pageIndex = (int)ViewData["PageIndex"]!;
    var pageSize = (int)ViewData["PageSize"]!;
    var pageCount = (int)ViewData["PageCount"]!;
    var pageData = ViewData["PageData"] as IEnumerable<DartsItem>;

    var jsonOptions = new JsonSerializerOptions();
    jsonOptions.Converters.Add(new IntListOrIntListListConverter());
}

<div>
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <form asp-action="AddDartsItem">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">@localizer["NewDartsItem"]</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <label class="form-label">@localizer["Items"]</label>
                        <div class="d-flex justify-content-between mb-3">
                            <input type="text" class="form-control" name="item1">
                            <input type="text" class="form-control" name="item2">
                            <input type="text" class="form-control" name="item3">
                            <input type="text" class="form-control" name="item4">
                            <input type="text" class="form-control" name="item5">
                            <input type="text" class="form-control" name="item6">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">@localizer["ExtraItem"]</label>
                            <input class="form-control" name="extraItem"/>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@localizer["Close"]</button>
                        <button type="submit" class="btn btn-primary">@localizer["Save"]</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="d-flex justify-content-between">
        <div>
            <p class="h3">@localizer["DartsItems"]</p>
        </div>
        <button type="submit" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">+ @localizer["New"]</button>
    </div>
    <table width="100%" class="table table-striped  table-sm">
        <thead>
            <tr>
                <th>@localizer["Id"]</th>
                <th>@localizer["StartDate"]</th>
                <th>@localizer["Items"]</th>
                <th>@localizer["ExtraItem"]</th>
                <th>@localizer["Operation"]</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var offerPack in pageData)
                {
                    <tr>
                        <td>@offerPack.Id</td>
                        <td>@offerPack.StartDate</td>
                        <td>@string.Join(", ", offerPack.Items)</td>
                        <td>@offerPack.ExtraItem</td>
                        <td>
                            <form asp-action="DeleteDartsItem" asp-route-id="@offerPack.Id">
                                <div class="btn-group" role="group">
                                    <button type="submit" class="btn btn-danger">@localizer["Delete"]</button>
                                </div>
                            </form>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<nav>
    <ul class="pagination justify-content-center">
        <li class="page-item @(pageIndex <= 1?"disabled":"")">
            <a class="page-link" href="?pageIndex=@(pageIndex - 1)&pageSize=@pageSize" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
        @{
            var indexes = PageIndexesHelper.CalculatePageIndexes(pageIndex, pageCount, 11);
            foreach (var index in indexes)
            {
                <li class="page-item">
                    <a class="page-link" href="?pageIndex=@(index)&pageSize=@pageSize">@(index)</a>
                </li>
            }
        }
        <li class="page-item @(pageIndex >= pageCount?"disabled":"")">
            <a class="page-link" href="?pageIndex=@(pageIndex + 1)&pageSize=@pageSize" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
</nav>