@using System.Text.Json
@using Microsoft.AspNetCore.Mvc.Localization
@using System.Text.Json.Nodes
@using SocialEmpires.Models.Configs

@inject IViewLocalizer localizer
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = localizer["GlobalSettings"];
    var globals = ViewData["GlobalSettings"] as List<GlobalSetting>;
}

<div>
    @{
        foreach(var element in globals)
        {
            <form asp-action="UpdateGlobalSetting" asp-route-key="@element.Key">
                <div class="input-group mb-1">
                    <span class="input-group-text">@element.Key</span>
                    <input class="form-control form-control-sm" type="text" name="value" value="@element.Value">
                    <button type="submit" class="btn btn-primary">@localizer["Apply"]</button>
                </div>
            </form>
        }
    }
</div>