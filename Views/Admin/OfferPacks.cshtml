@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Mvc.Localization
@using SocialEmpires.Infrastructure.MultiLanguage
@using SocialEmpires.Models.Configs
@using SocialEmpires.Services
@using SocialEmpires.Utils
@using System.Text.Json
@attribute [Authorize(Roles = "Admin")]
@inject IViewLocalizer localizer
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = localizer["OfferPacks"];
    var pageIndex = (int)ViewData["PageIndex"]!;
    var pageSize = (int)ViewData["PageSize"]!;
    var pageCount = (int)ViewData["PageCount"]!;
    var pageData = ViewData["PageData"] as IEnumerable<OfferPack>;

    var jsonOptions = new JsonSerializerOptions();
    jsonOptions.Converters.Add(new IntListOrIntListListConverter());
}

<div class="d-flex justify-content-between">
    <div>
        <p class="h3">@localizer["OfferPacks"]</p>
    </div>
    <button type="submit" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">+ @localizer["New"]</button>
</div>

<div>
    <table width="100%" class="table table-striped  table-sm">
        <thead>
            <tr>
                <th>@localizer["Image"]</th>
                <th>@localizer["Id"]</th>
                <th>@localizer["Position"]</th>
                <th>@localizer["Type"]</th>
                <th>@localizer["Price"]</th>
                <th>@localizer["Resource"]</th>
                <th width="200px">@localizer["Items"]</th>
                <th>@localizer["Operation"]</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var offerPack in pageData)
                {
                    <tr>
                        <td>
                            <img src="/default01.static.socialpointgames.com/static/socialempires/images_new/en/offer_pack_@(offerPack.Id).png" width="226" height="38" />
                        </td>
                        <td>@offerPack.Id</td>
                        <td>@offerPack.Position</td>
                        <td>@offerPack.PackType</td>
                        <td>@offerPack.CostCash</td>
                        <td>
                            <div class="overflow-auto">
                                 @($"g:{offerPack.Gold} s:{offerPack.Stone} f:{offerPack.Food} w:{offerPack.Wood} xp:{offerPack.Xp}")
                            </div>
                        </td>
                        <td>@JsonSerializer.Serialize(offerPack.Items, jsonOptions).Replace("],[", " ||| ").Replace('[', ' ').Replace(']', ' ').Replace(',', ' ')</td>
                        <td>
                            <div class="btn-group" role="group">
                                <form asp-action="EnableOfferPack" asp-route-id="@offerPack.Id">
                                    <button type="submit" class="btn btn-warning" disabled="@(offerPack.Enabled)">@localizer["Enable"]</button>
                                </form>
                                <form asp-action="DisableOfferPack" asp-route-id="@offerPack.Id">
                                    <button type="submit" class="btn btn-warning" disabled="@(!offerPack.Enabled)">@localizer["Disable"]</button>
                                </form>
                                <form asp-action="DeleteOfferPack" asp-route-id="@offerPack.Id">
                                    <button type="submit" class="btn btn-danger">@localizer["Delete"]</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<nav>
    <ul class="pagination justify-content-center">
        <li class="page-item @(pageIndex <= 1?"disabled":"")">
            <a class="page-link" href="?pageIndex=@(pageIndex - 1)&pageSize=@pageSize" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
        @{
            var indexes = PageIndexesHelper.CalculatePageIndexes(pageIndex, pageCount, 11);
            foreach (var index in indexes)
            {
                <li class="page-item">
                    <a class="page-link" href="?pageIndex=@(index)&pageSize=@pageSize">@(index)</a>
                </li>
            }
        }
        <li class="page-item @(pageIndex >= pageCount?"disabled":"")">
            <a class="page-link" href="?pageIndex=@(pageIndex + 1)&pageSize=@pageSize" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
</nav>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form asp-action="AddOfferPack">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">@localizer["NewOfferPacks"]</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="input-group mb-1">
                        <span class="input-group-text">@localizer["PackType"]</span>
                        <input class="form-control form-control-sm" type="text" name="packType" value="0">
                    </div>
                    <div class="input-group mb-1">
                        <span class="input-group-text">@localizer["Position"]</span>
                        <input class="form-control form-control-sm" type="text" name="position" value="20">
                    </div>
                    <div class="input-group mb-1">
                        <span class="input-group-text">@localizer["CostCash"]</span>
                        <input class="form-control form-control-sm" type="text" name="costCash" value="999">
                    </div>

                    <label class="form-label">@localizer["Resources"]</label>
                    <div class="input-group mb-1">
                        <span class="input-group-text">@localizer["Gold"]</span>
                        <input class="form-control form-control-sm" type="text" name="gold" value="0">
                    </div>
                    <div class="input-group mb-1">
                        <span class="input-group-text">@localizer["Stone"]</span>
                        <input class="form-control form-control-sm" type="text" name="stone" value="0">
                    </div>
                    <div class="input-group mb-1">
                        <span class="input-group-text">@localizer["Wood"]</span>
                        <input class="form-control form-control-sm" type="text" name="wood" value="0">
                    </div>
                    <div class="input-group mb-1">
                        <span class="input-group-text">@localizer["Food"]</span>
                        <input class="form-control form-control-sm" type="text" name="food" value="0">
                    </div>
                    <div class="input-group mb-1">
                        <span class="input-group-text">@localizer["Xp"]</span>
                        <input class="form-control form-control-sm" type="text" name="xp" value="0">
                    </div>
                    <div class="input-group mb-1">
                        <span class="input-group-text">@localizer["Mana"]</span>
                        <input class="form-control form-control-sm" type="text" name="mana" value="5">
                    </div>
                   
                    <div class="mb-1">
                        <label class="form-label">@localizer["Items"]</label>
                        <textarea class="form-control" placeholder="[500,501,502,503] or [[500,501],[502,503]]" name="items"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@localizer["Close"]</button>
                    <button type="submit" class="btn btn-primary">@localizer["Save"]</button>
                </div>
            </div>
        </form>
    </div>
</div>